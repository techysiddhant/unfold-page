<%- include("./partials/header.ejs") %>
    <title>Unfold Page | Show Post</title>
    </head>

    <body>
        <header id="header" class=" w-full h-20 bg-indigo-700 text-white flex justify-between items-center drop-shadow-md px-6 md:px-12">
            <a href="" class="font-pacifico tracking-wider flex justify-center items-center text-md sm:text-xl md:text-2xl">
                Unfold Page
              </a>
            <a href="/posts" class="hover:scale-125 transition-all ease-in duration-200  ">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                  </svg>

            </a>
        </header>
        <div class="flex min-h-screen flex-col  overflow-hidden bg-gray-100 py-6 sm:py-4">
            <% if(post){%>
                <div class="container mx-auto grid gap-6 p-4 px-10 sm:grid-cols-1 md:grid-cols-3">
                    <div class="bg-white p-7 shadow-md md:col-span-2">
                        <span class="font-medium text-lg"><%= formatDate(post.createdAt,'LLL')   %></span>
                        <h1 class="my-4 font-semibold text-lg p-2">
                            <%= post.title %>
                        </h1>

                        <!-- <img src="https://unfoldpage.live/image/<%=post.imgname%>" alt="thumbnail" /> -->
                        <img src="image/<%=post.imgname%>" alt="thumbnail" />
                        <!-- <div class="w-96 flex flex-col justify-center items-center h-auto">
                            <div>

                            </div>
                        </div> -->
                        <p class="p-2 leading-7 ">
                            <%= stripTag(post.storybody) %>
                        </p>
                    </div>
                    <div class="rounded-sm bg-white shadow-md md:h-80">

                        <div class="flex flex-col items-center justify-center my-8">
                            <h1 class="text-2xl py-4 font-semibold">
                                <%= user.username %>
                            </h1>
                            <button class="h-28 w-28 rounded-full bg-indigo-700 text-5xl text-white text-center"><%= displayName(user.firstname,user.lastname) %></button>
                            <hr class="my-6 w-4/5 text-gray-600 ">
                            <a href="/user/<%= user._id %>" class="hover:text-blue-600 text-indigo-700 font-semibold uppercase">More From <%= user.username %></a>
                        </div>


                    </div>
                </div>
                <%} else{%>
                    <p>No story Exist</p>
                    <% } %>
        </div>




        <%- include("./partials/footer.ejs") %>
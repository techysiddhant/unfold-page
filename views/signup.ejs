  <div class="welcome bg-slate-900 text-white">
    <h1>welcome to Untold Story</h1>
    <h3>Create an Account</h3>
  </div>
  <div class="container">
    <form action="">
      <div class="firstname">
        <label for="firstname">First Name</label>
        <input type="text" placeholder="First Name" />
